@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Лента</title>
    <style>
        body {
            font-family: sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
            display: flow;
            justify-content: flex-end;
        }

        .profile-section {
            position: fixed;
            top: 100px;
            left: 20px;
            width: 200px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 15px;
            text-align: center;
        }

        .avatar-placeholder {
            width: 80px;
            height: 80px;
            background-color: #ddd;
            border-radius: 50%;
            margin: 0 auto 10px;
        }

        .username {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .publication-count {
            font-size: 0.9em;
            color: #777;
            margin-bottom: 10px;
        }

        .profile-button {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 8px 15px;
            cursor: pointer;
            font-size: 0.9em;
            text-decoration: none;
        }

        .profile-button:hover {
            background-color: #0056b3;
        }

        .feed-container {
            margin: auto;
            width: 100%; /* Примерная ширина ленты */
            display: flex;
            flex-direction: column;
            padding-top: 40px;
            padding-bottom: 40px;
            gap: 20px; /* Расстояние между постами */
        }

        .post {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            overflow: hidden; /* Обрезаем элементы, выходящие за границы */
        }

        .post-image-container {
            position: relative; /* Контейнер для позиционирования имени и лайков */
        }

        .post-image {
            width: 100%;
            display: block;
        }

        .username-overlay {
            position: absolute;
            top: 10px;
            left: 10px;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 5px 8px;
            border-radius: 4px;
            font-size: 0.9em;
        }

        .like-overlay {
            position: absolute;
            bottom: 10px;
            right: 10px;
            background-color: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 5px 8px;
            border-radius: 4px;
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 0.9em;
        }

        .like-icon {
            /* Здесь можно добавить иконку лайка (например, Font Awesome или SVG) */
            width: 16px;
            height: 16px;
            background-color: white; /* Заглушка для иконки */
            border-radius: 50%;
        }

        .post-description {
            padding: 15px;
            font-size: 0.95em;
            color: #333;
        }

        /* Стили для кнопки "Jump to Start" */
        .jump-to-start {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            opacity: 0; /* Сначала делаем кнопку невидимой */
            transition: opacity 0.3s ease-in-out;
            z-index: 10; /* Чтобы кнопка была поверх остального контента */
        }

        .jump-to-start.visible {
            opacity: 1; /* Показываем кнопку при прокрутке */
        }

        .background-image {
            position: fixed;
            top: 0;
            left: 0;
             width: 100%; /* Уменьшим ширину, чтобы освободить место для формы */
            /* /* /* height: 100%; */
            /* /* /* object-fit: contain; /* Изменено на contain */
            z-index: -1;
            /* /* /* background-image: url('/images/feed-bg.svg'); */
            /* background: repeat; /* Или contain, repeat, etc. в зависимости от твоего SVG */ */
            background-repeat: repeat;
        }

        .arrow-up {
            border: solid white;
            border-width: 0 3px 3px 0;
            display: inline-block;
            padding: 3px;
            transform: rotate(-90deg);
            -webkit-transform: rotate(-90deg);
        }

        .add-post-button {
            position: fixed;
            bottom: 20px;
            right: 80px; /* Зміщуємо лівіше від "Jump to Start" */
            background-color: #28a745; /* Зелений колір */
            color: white;
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            font-size: 1.5em;
            z-index: 10;
            text-decoration: none;
        }

        .add-post-button:hover {
            background-color: #1e7e34;
        }
    </style>
    <link rel="stylesheet" href="~/css/Style.css">
</head>
<body>
    <header class="site-header">
        <form id="search-container" action="/search" method="GET" role="search">
            <label for="search-input" class="visually-hidden">Поиск по сайту</label>
            <input type="search" id="search-input" name="q" placeholder="Поиск...">
            <button type="submit" id="search-button">
                <span class="visually-hidden">Найти</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                </svg>
            </button>
        </form>
    </header>

    <img src="~/Images/mainBack.svg" alt="Оранжевый фон" class="background-image">

    <div class="profile-section">
        <div class="avatar-placeholder"></div>
        <div class="username">Ім'я Користувача</div>
        <div class="publication-count">123 публікації</div>
        <a href="/Profile" class="profile-button">Профіль</a>
    </div>

    <div class="feed-container" id="feed-wrapper">        
    </div>
    <button class="jump-to-start" id="jumpToStartBtn">
        <i class="arrow-up"></i>
    </button>

    <a href="/Home/AddPublication" class="add-post-button">
        +
    </a>

    <script type="module" src="~/js/dist/feed.js"></script>
</body>
</html>